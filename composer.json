{
    "name": "oneofftech/video-streaming",
    "description": "The K-Link Video Streaming service.",
    "keywords": ["video", "streaming", "dash", "mp4", "embed"],
    "license": "AGPL-3.0",
    "type": "project",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://git.klink.asia/alessio.vertemati/laravel-tus-upload"
        },
        {
            "type": "vcs",
            "url": "https://git.klink.asia/main/k-registry-client.git"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "avvertix/laravel-tus-upload": "dev-master",
        "endyjasmi/cuid": "2.0.*",
        "fideloper/proxy": "3.3.*",
        "guzzlehttp/psr7": "^1.4",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "1.0.*",
        "oneofftech/k-link-registry-client": "0.1.*",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message": "^1.6"
    },
    "require-dev": {
        "fzaninotto/faker": "1.7.*",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "5.7.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files" : [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php -r \"touch('./database/database.sqlite');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "install-video-cli": [
            "App\\ComposerScripts::postInstall"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "video-cli-download-url": "https://github.com/OneOffTech/video-processing-cli/releases/download/v0.4.0/video-processing-cli"
    }
}
